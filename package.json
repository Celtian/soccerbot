{
  "name": "soccerbot",
  "version": "0.3.6",
  "description": "Library for scraping soccer data from the internet",
  "scripts": {
    "start": "rimraf dist && tsc-watch --build tsconfig.es5.json --onSuccess 'yarn postbuild'",
    "demo": "ts-node demo",
    "build": "rimraf dist && tsc --build tsconfig.es6.json && tsc --build tsconfig.es5.json",
    "postbuild": "copyfiles ./package.json ./README.md ./LICENSE ./dist && yarn prepare-dist",
    "test": "jest --config test/jest-config.json",
    "husky:install": "husky install",
    "prepare-dist": "ts-node --project scripts/tsconfig.ts-node.json scripts/prepare-dist",
    "gpr:setup": "ts-node --project scripts/tsconfig.ts-node.json scripts/gpr-setup",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preinstall": "npx only-allow yarn",
    "postversion": "git push && git push --follow-tags",
    "publish:beta": "yarn && yarn build && npm publish --folder dist --tag beta",
    "release:beta": "npm version prerelease -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛 \"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥 \""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Celtian/soccerbot.git"
  },
  "author": {
    "name": "Dominik Hladík",
    "email": "dominik.hladik@seznam.cz"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Celtian/soccerbot/issues"
  },
  "homepage": "https://github.com/Celtian/soccerbot#readme",
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "node-html-parser": "^6.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "auto-changelog": "^2.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.30.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "data",
    "download",
    "football",
    "scraper",
    "soccer",
    "soccerbot"
  ]
}
